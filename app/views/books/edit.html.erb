<h2>Edit Book</h2>
<%= form_for @book do |f| %>
	<% if @book.errors.any? %>
		<% @book.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
	<div class="form-group">
		<%= f.label :title %><br>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :isbn %><br>
		<%= f.text_field :isbn, class: "form-control" %>
	</div>
		<div class="form-group">
		<%= f.label :author %><br>
		<%= f.select :authors, Author.all.collect{|a| [a.first_name + ' '+ a.last_name]}, {include_blank: "Select One"}, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description %><br>
		<%= f.text_area :description, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :price %><br>
		<%= f.text_field :price, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :published_date %><br>
		<%= f.text_field :published_date, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :cover %><br>
		<%= f.text_field :image, class: "form-control" %>
	</div>
	<%= f.submit "Submit", class: "btn btn-primary"%>
	<%= link_to "Cancel", authors_path, class: "btn btn-default" %>
<% end %>
